      ],
      "usage_rule": "当vulnerability参数>=7时，包含1个轻微缺点或个人局限性"
    }
  },

  "contentStructure": {
    "openingHooks": {
      "confession": "说个真心话...",
      "discovery": "昨天发现了个宝藏资料...",
      "studyProblem": "最近备考遇到个头疼的事...",
      "breakthrough": "没想到这个资料这么管用...",
      "scoreImprovement": "分数提升后忍不住要分享...",
      "recommendation": "必须安利这个学习神器..."
    },
    "paragraphRules": {
      "maxSentences": 4,
      "idealSentences": "2-3",
      "allowSingleSentence": true,
      "breathingSpace": true,
      "emojiFrequency": "1-2 per paragraph",
      "naturalFlow": "优先真实分享感受，而非严格结构",
      "educationalFocus": "突出学习效果和使用体验"
    },
    "closingPatterns": {
      "question": "你们有什么好推荐吗？",
      "invitation": "有需要的可以私信我哦",
      "encouragement": "希望对你们也有帮助！",
      "continuation": "后续还会分享更多，记得关注～"
    }
  },

  "qualityControls": {
    "authenticity": {
      "requirePersonalExperience": true,
      "avoidGenericStatements": true,
      "includeSpecificDetails": true
    },
    "engagement": {
      "minInteractionElements": 2,
      "requireEmotionalConnection": true,
      "encourageUserResponse": true
    },
    "readability": {
      "maxWordsPerSentence": 20,
      "preferActiveVoice": true,
      "avoidComplexStructures": true
    }
  },

  "forbiddenElements": {
    "punctuation": ["—", ":", "\""],
    "structures": ["A 而且 B", "设问句开头"],
    "words": ["该", "此", "彼", "其"],
    "phrases": ["众所周知", "毋庸置疑", "显而易见"]
  },

